{
    "$schema": "https://railway.app/railway.schema.json",
    "services": {
      "web": {
        "build": {
          "builder": "DOCKERFILE",
          "dockerfilePath": "Dockerfile"
        },
        "deploy": {
          "numReplicas": 1,
          "restartPolicyType": "ALWAYS"
        }
      },
      "mysql": {
        "image": "mysql:8.0",
        "containers": {
          "mysql": {
            "env": {
              "MYSQL_ROOT_PASSWORD": "root",
              "MYSQL_DATABASE": "DB-XYZ"
            }
          },
        "ports": [
          {
            "internal": 3306,
            "public": 3306
          }
        ]
        
        },
        "volumes": {
          "data": "/var/lib/mysql"
        }
      }
    }
  }
  